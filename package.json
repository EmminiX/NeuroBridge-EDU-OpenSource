{
  "name": "neurobridge-edu",
  "version": "1.0.0",
  "description": "NeuroBridge EDU - AI-powered educational transcription and summarization platform with secure API key management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "echo 'Use Python backend: ./start_python_backend.sh'",
    "dev:frontend": "vite",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "tsc && vite build",
    "build:backend": "echo 'Backend ready - no build step required'",
    "preview": "vite preview",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.tsx,.json",
    "lint:fix": "eslint . --ext .js,.ts,.tsx,.json --fix",
    "db:init": "node scripts/init-db.js --migrate --seed",
    "db:reset": "node scripts/init-db.js --reset --migrate --seed",
    "db:seed": "node scripts/seed-demo-data.js",
    "db:backup": "node scripts/init-db.js --backup",
    "db:check": "node scripts/init-db.js --check",
    "docker:build": "docker build -t neurobridge-edu .",
    "docker:run": "docker run -d -p 3939:3939 --name neurobridge-edu-container neurobridge-edu",
    "docker:compose": "docker compose up -d --build",
    "docker:compose:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:logs": "docker compose logs -f neurobridge-edu",
    "docker:stop": "docker compose down",
    "docker:clean": "docker compose down -v && docker system prune -f"
  },
  "keywords": [
    "education",
    "ai",
    "lecture-summaries",
    "openai",
    "sqlite",
    "docker",
    "webhook",
    "api",
    "react",
    "typescript",
    "vite"
  ],
  "author": {
    "name": "NeuroBridge EDU",
    "email": "neurobridgeedu@gmail.com",
    "url": "https://neurobridgeedu.eu"
  },
  "license": "SEE LICENSE FILE",
  "dependencies": {
    "@deepgram/sdk": "^4.11.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "immer": "^10.1.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "puppeteer": "^24.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "serve-static": "^1.15.0",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^2.1.0",
    "victory": "^37.3.6",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^7.0.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neurobridge/neurobridge-edu.git"
  },
  "bugs": {
    "url": "https://github.com/neurobridge/neurobridge-edu/issues"
  },
  "homepage": "https://neurobridgeedu.eu",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!docker/**",
      "!scripts/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:security/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "security/detect-object-injection": "warn",
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
